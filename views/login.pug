doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css')
  link(rel='stylesheet' href='/css/kglCss/login.css')
  title KGL | Login
.bg-grains
.bg-overlay
.login-container
  .card.login-card
    .card-header
      h2.mb-0 Karibu Groceries Limited
      p.mb-0 Fresh groceries Everyday
    .card-body.text-center
      //- Animated logo container
      .logo-container.floating
        img.logo-img(src='/img/image 26.png' alt='KGL Logo')
      h4.mb-4 Welcome Back!
      form#loginForm(action='/login' method = 'POST')
        .mb-3.text-start
          label.form-label(for='email') Email
          .input-group
            span.input-group-text.bg-light
              i.bi.bi-envelope.text-success
            input#email.form-control(type='email'  name='email' required placeholder='Enter your email address')
          span#emailError.text-danger.error-message
        .mb-3.text-start
          label.form-label(for='password') Password
          .input-group
            span.input-group-text.bg-light
              i.bi.bi-lock.text-success
            input#password.form-control(type='password' required name='password' placeholder='Enter your password')
            button#togglePassword.input-group-text.bg-light(type='button')
              i.bi.bi-eye.text-success
          span#passwordError.text-danger.error-message
        #error.text-danger.mb-3
        .d-flex.justify-content-between.mb-3
          .form-check
            input#rememberMe.form-check-input(type='checkbox')
            label.form-check-label(for='rememberMe') Remember me
          a.links.text-success(href="/resetPassword") Forgot password?
        button.btn.btn-login.btn-success.w-100.mb-3(type='submit')
          | Log-In
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js')
script(src='/filejs/login.js')
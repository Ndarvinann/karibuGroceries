doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Karibu Groceries - Procurement
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet')
    link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css')
    link(rel='stylesheet' href='kglCss/procurement.css')
  body
    .container-fluid
      .row
        nav.col-md-3.col-lg-2.d-md-block.sidebar
          .position-sticky.pt-3
            h1.p-3 Features
            ul.nav.flex-column.p-3
              li.nav-item
                a.nav-link(href='/managerDash') 
                  i.fas.fa-home.me-2
                  | Home
              li.nav-item
                a.nav-link(href='/logout') 
                  i.fas.fa-sign-out-alt.me-2
                  | Logout
        main.col-md-9.col-lg-10.main-content
          .procurement-card
            h4.mb-4
              i.fas.fa-shopping-basket.me-2
              | Produce Procurement
            form#procurementForm(action='/addProduce' method='POST')
              .row.g-3
                .col-md-6
                  .mb-3
                    label.form-label(for='produceName') Produce Name
                    select#produceName.form-select(required='' name='produce')
                      option(selected='' disabled='' value='') Select produce...
                      option(value='gnuts') Gnuts
                      option(value='maize') Maize
                      option(value='beans') Beans
                      option(value='cow-peas') Cow-peas
                      option(value='soybeans') Soybeans
                  .mb-2.mt-2
                    p#costPerKgDisplay.text-muted Cost per kg: -  
                  .mb-3
                    label.form-label(for='tonnage') Quantity (in kgs)
                    .input-group
                      input#tonnage.form-control(type='number' min='1' step='0.5' required='' name='kilos')
                      span.input-group-text kg
                  .mb-3
                    label.form-label(for='dealerName') Dealer's Name
                    input#dealerName.form-control(type='text' required='' name='dealerName')
                  .mb-3
                    label.form-label(for='branchName') Branch Name
                    select#branchName.form-select(required='' name='branchname')
                      option(selected='' disabled='' value='') Select Branch
                      option(value='maganjo') Maganjo
                      option(value='matuga') Matuga
                      option(value='Local Traders') Local Traders
                .col-md-6
                  .mb-3
                    label.form-label(for='dateTime') Date and Time
                    input#dateTime.form-control(type='datetime-local' required='' name='dateAndTime')
                  .mb-3
                    label.form-label(for='cost') Cost (in UgX)
                    .input-group
                      span.input-group-text UgX
                      input#cost.form-control(type='number' min='1' required='' name='cost')
                  .mb-3
                    label.form-label(for='contact') Contact
                    .input-group
                      span.input-group-text +256
                      input#contact.form-control(type='tel' required='' name='contact')
                  .mb-3
                    label.form-label(for='priceToSell') Selling Price/Kg
                    .input-group
                      span.input-group-text UgX
                      input#priceToSell.form-control(type='number' required='' name='priceToSell')
                      button#calculateMarkup.btn.btn-outline-success(type='button')
                        i.fas.fa-calculator.me-1
                        | Auto-calculate
                    p.text-muted.mt-1 30% Markup
              .col-12.mt-3
                button.btn.btn-submit.me-2(type='submit')
                  i.fas.fa-save.me-1
                  | Submit Record
                button.btn.btn-outline-secondary(type='reset')
                  i.fas.fa-undo.me-1
                  | Reset Form
          footer.mt-5.py-3
            .container.text-center
              p.mb-0.text-muted &copy; 2025 Karibu Groceries. All rights reserved.
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js')
    script(src='/filejs/procurement.js')



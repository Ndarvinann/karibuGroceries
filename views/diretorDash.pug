head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Karibu Groceries - Director Dashboard
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css' rel='stylesheet')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css')
  link(rel='stylesheet' href='/css/kglCss/directorDash.css')
.container-fluid
  .row
    nav.col-md-2.d-none.d-md-block.bg-light.sidebar
      h1 Features
      .position-sticky
        ul.nav.flex-column.p-3
          li.nav-item
            a.nav-link.active(href='#') &#x1F3E0; Home
          li.nav-item
            a.nav-link(href='#') &#x1F4CA; Analytics
          li.nav-item
            a.nav-link(href='#') &#x1F6D2; Users
          li.nav-item
            a.nav-link(href='#') &#x1FAD8; Products
          li.nav-item
            a.nav-link(href='#') &#x2728; Sales
          li.nav-item
            a.nav-link(href='#') &#x2699;&#xFE0F; Credit
          li.nav-item
            a.nav-link(href='#') &#x1F3E6; Payments
          li.nav-item
            a.nav-link(href='#') &#x2699;&#xFE0F; Settings
          li.nav-item
            a.nav-link(href='#') &#x274C; Logout
    main.col-md-10.ml-sm-auto.col-lg-10.px-md-4.content(role='main')
      .dashboard-container
        .report-header.d-flex.justify-content-between.align-items-center.mb-3
          h2
            i.fas.fa-tachometer-alt.text-success.me-2
            | Director's Dashboard
          .text-muted
            span#update-time
        .row.g-3
          .col-md-4
            .report-card.h-100
              h5
                i.fas.fa-coins.text-primary
                |  Total Sales
              p#total-sales.lead Loading...
          .col-md-4
            .report-card.h-100
              h5
                i.fas.fa-truck.text-info
                |  Total Procurement
              p#total-procurement.lead Loading...
          .col-md-4
            .report-card.h-100
              h5
                i.fas.fa-chart-line.text-success
                |  Sales Trend
              p#sales-trend.lead Loading...
        .row.mt-3
          .col-md-8
            .chart-container.bg-white.rounded.shadow-sm.p-3(style='height: 300px;')
              h5.mb-3 Sales Overview
              canvas#salesChart
          .col-md-4
            .filter-container.bg-white.rounded.shadow-sm.p-3
              h5.mb-3 Filter Reports
              .d-grid.gap-2
                button.btn.btn-outline-secondary.btn-sm.filter-button(data-filter='week') This Week
                button.btn.btn-outline-secondary.btn-sm.filter-button(data-filter='month') This Month
                button.btn.btn-outline-secondary.btn-sm.filter-button(data-filter='year') This Year
                button.btn.btn-outline-secondary.btn-sm.filter-button(data-filter='custom') Custom Range
              #custom-date-range.mt-2(style='display: none;')
                .input-group.input-group-sm.mb-2
                  input#start-date.form-control(type='date')
                .input-group.input-group-sm.mb-2
                  input#end-date.form-control(type='date')
                button#apply-date-filter.btn.btn-primary.btn-sm.w-100 Apply
        .row.mt-3
          .col-md-6
            .report-card
              h5
                i.fas.fa-receipt.me-2
                | Sales Report
              p.small View sales data for custom periods.
              button.btn.btn-sm.btn-success.generate-sales-report.w-100 Generate Report
              #sales-report-display.mt-2.small
          .col-md-6
            .report-card
              h5
                i.fas.fa-truck.me-2
                | Procurement Report
              p.small View procurement history and costs.
              button.btn.btn-sm.btn-success.generate-procurement-report.w-100 Generate Report
              #procurement-report-display.mt-2.small
footer.mt-4.py-3.bg-light
  .container.text-center
    p.mb-0.text-muted &copy; 2025 Karibu Groceries. All rights reserved.
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
script(src='https://cdn.jsdelivr.net/npm/chart.js')
script(src='https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js')
script(src='https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.8.2/jspdf.plugin.autotable.min.js')
script(src='/filejs/directorDash.js')
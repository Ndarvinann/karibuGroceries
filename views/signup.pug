doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css')
  link(rel='stylesheet' href='/css/kglCss/signUp.css')
  title KGL | Sign Up
.bg-grains
.bg-overlay
.signup-container
  .card.signup-card
    .card-header
      h2.mb-0 KARIBU GROCERIES LTD
      p.mb-0 Quality Groceries, Everyday
    .card-body.text-center
      .logo-container.floating
        img.logo-img(src='/img/image 26.png' alt='KGL Logo')
      h4 CREATE ACCOUNT
      form#signupForm(action='/signup' method='POST')
        .row.row-compact
          .col-md-6.text-start
            label.form-label(for='firstName') First Name
            .input-group
              span.input-group-text
                i.bi.bi-person-fill.text-success
              input#firstName.form-control(type='text' required='' placeholder='' name='firstName')
            span#firstNameError.text-danger.error-message
          .col-md-6.text-start
            label.form-label(for='lastName') Last Name
            .input-group
              span.input-group-text
                i.bi.bi-person-fill.text-success
              input#lastName.form-control(type='text' required='' placeholder='' name='lastName')
            span#lastNameError.text-danger.error-message
        .row.row-compact
          .col-md-6.text-start
            label.form-label(for='email') Email
            .input-group
              span.input-group-text
                i.bi.bi-envelope-fill.text-success
              input#email.form-control(type='email' required='' placeholder='' name='email')
            span#emailError.text-danger.error-message
          .col-md-6.text-start
            label.form-label(for='phone') Phone
            .input-group
              span.input-group-text
                i.bi.bi-telephone-fill.text-success
              input#phone.form-control(type='tel' required='' placeholder='' name='phoneNumber')
            span#phoneError.text-danger.error-message
        .text-start.mb-1
          label.form-label(for='role') Role
          .input-group
            span.input-group-text
              i.bi.bi-person-vcard-fill.text-success
            select#role.form-select(required='' name='role')
              option(value='' disabled='' selected='') Select role
              option(value='salesAgent') Sales Agent
              option(value='manager') Manager
              option(value='director') Director
          span#roleError.text-danger.error-message
        .row.row-compact
          .col-md-6.text-start
            label.form-label(for='password') Password
            .input-group
              span.input-group-text
                i.bi.bi-lock-fill.text-success
              input#password.form-control(type='password' required='' placeholder='' name='password')
              button#togglePassword.input-group-text(type='button')
                i.bi.bi-eye-fill.text-success
            span#passwordError.text-danger.error-message
          .col-md-6.text-start
            label.form-label(for='confirmPassword') Confirm
            .input-group
              span.input-group-text
                i.bi.bi-lock-fill.text-success
              input#confirmPassword.form-control(type='password' required='' placeholder='' name='confirmPassword')
              button#toggleConfirmPassword.input-group-text(type='button')
                i.bi.bi-eye-fill.text-success
            span#confirmPasswordError.text-danger.error-message
        #error.text-danger.mb-1(style='min-height: 16px;')
        button.btn.btn-login.btn-success.w-100(type='submit')
          i.bi.bi-box-arrow-in-right.me-1
          |  SIGN UP
        .mt-1
          p.mb-0.small
            | Have an account? 
            a(href='/login') LOGIN HERE
  footer.text-center
    p.mb-0.small &copy; 2025 KGL. All Rights Reserved
